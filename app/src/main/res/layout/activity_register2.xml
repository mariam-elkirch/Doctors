        app:cardCornerRadius="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
